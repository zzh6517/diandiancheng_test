<h1>Ruby China用户登录</h1>
<% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>
<%=form_tag sessions_path, method: :post do%>
        <label>用户名/Email:</label>
        <%= text_field_tag('email', nil, placeholder: "用户名/Email", required: true) %>
        <label>密码:</label>
        <%= password_field_tag('password', nil, placeholder: "密码", required: true) %>
    <button type="submit">提交</button>
<% end %>
<%= link_to "返回首页", "/" %>
