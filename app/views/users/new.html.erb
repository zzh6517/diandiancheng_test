<h1>Ruby China用户注册</h1>
<% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>
<%=form_tag users_path, method: :post do%>
    <p>
        <label>用户名:</label>
        <%= text_field_tag('user_login', nil, placeholder: "用户名", required: true) %>
    </p>
    <p>
        <label>名字:</label>
        <%= text_field_tag('user_name', nil, placeholder: "名字", required: true) %>
    </p>
    <p>
        <label>Email:</label>
        <%= text_field_tag('user_email', nil, placeholder: "Email", required: true) %>
    </p>
    <p>
        <label>密码:</label>
        <%= password_field_tag('user_password', nil, placeholder: "密码", required: true) %>
    </p>
    <p>
        <label>确认密码:</label>
        <%= password_field_tag('user_password_confirmation', nil, placeholder: "确认密码", required: true) %>
    </p>
    <p>
        <label>验证码:</label>
        <%= text_field_tag('captcha', nil, placeholder: "验证码", required: true) %>
    </p>
    <p><img src=<%= @image_url %>></p>
    <button type="submit">提交</button>
<% end %>
<%= link_to "返回首页", "/" %>
